<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 338.667 190.5" height="720" width="1280">
  {# background #}
  <rect width="1280" height="720" fill="#fff" />
  <path d="M275.167 190.5L145.52 0h193.146v190.5z" fill="#38a996"/>
  <path d="M19.506 190.5L293.423 0h45.244v190.5z" fill="#4ac3ae"/>
  <path d="M49.423 190.5L338.667 32.147V190.5z" fill="#61cdb7"/>
  {# title #}
  <text y="30" x="15" font-weight="800" font-size="16" font-family="Pretendard">
    {% for line in title %}
      <tspan x="15" y="{{ 30 + 16 * loop.index0 }}">
        {{ line }}
      </tspan>
    {% endfor %}
  </text>
  {# summary #}
  <text x="15" y="63" font-weight="300" font-size="12" font-family="Pretendard">
    {% for line in summary %}
      <tspan x="15" y="{{ 63 + 12 * loop.index0 }}">
        {{ line }}
      </tspan>
    {% endfor %}
  </text>
  {# tag #}
  <text x="15" y="150" font-weight="300" font-size="10" font-family="Pretendard">
      {% for tag in tags %}
        #{{ tag }}
      {% endfor %} 
  </text>
  <g transform="matrix(.5 0 0 .5 15 156)" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <rect ry="2" rx="2" height="18" width="18" y="4" x="3"/>
    <path d="M16 2v4M8 2v4M3 10h18"/>
  </g>
  <g transform="matrix(.5 0 0 .5 85 156)" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle r="10" cy="12" cx="12"/>
    <path d="M12 6v6l4 2"/>
  </g>
  {# date #}
  <text x="28" y="166" font-weight="300" font-size="10" font-family="Pretendard">
      {{ date }}
  </text>
  {# read time #}
  <text x="100" y="166" font-weight="300" font-size="10" font-family="Pretendard">
      {{ read_time }}분
  </text>
  {# license #}
  <text x="15" y="180" font-weight="300" font-size="6" font-family="Pretendard">
    © Font: Pretendard, Icon: feather by @colebemis
  </text>
  {# logo #}
  <path d="M261.22 161.66v4.29h5.801l-7.16 12.405h6.296l4.722-8.208 1.728-3.734 1.45 3.086 4.475 8.856h47.182v-4.353h-3.32l.563-6.547h-4.918l-.563 6.547h-5.106l.564-6.547h-4.918l-.564 6.547h-19.58v-8.019h37.842v-4.323h-42.916zm16.201 4.29h5.377v10.293z" fill="#fff"/>
</svg>